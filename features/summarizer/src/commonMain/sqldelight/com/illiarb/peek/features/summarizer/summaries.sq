CREATE TABLE IF NOT EXISTS summaries (
    `url` TEXT PRIMARY KEY NOT NULL,
    `summary` TEXT NOT NULL
);

summaryByUrl:
SELECT * FROM summaries WHERE url = :url;

saveSummary:
INSERT OR REPLACE INTO summaries (
    `url`,
    `summary`
) VALUES (
:url,
:summary
);

deleteSummary:
DELETE FROM summaries WHERE url = :url;
